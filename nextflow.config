# 1. Enable DSL2 in nextflow.config
cat > nextflow.config << 'EOS'
nextflow.enable.dsl=2

process {
  executor = 'local'
  cpus     = 4
  memory   = '8 GB'
}

params {
  reads  = 'rawdata/*_{R1,R2}_*.fastq.gz'
  outdir = 'preproc'
}

manifest {
  description = "v3 RNA‑preproc, built with nf‑core modules"
}
EOS

# 2. Create an empty scaffold main.nf
cat > main.nf << 'EOS'
// main.nf — DSL2 scaffold
nextflow.enable.dsl=2

workflow {
  log.info "Welcome to v3_rna_preproc. No steps enabled yet."
}
EOS
